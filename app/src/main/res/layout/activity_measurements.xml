<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.caciones.rssibtv1.View.MeasurementsActivity">

    <TextView android:text="@string/building_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBuilding"/>

    <TextView android:text="@string/room_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRoom"
        android:layout_below="@+id/textViewBuilding"/>


    <TableLayout
        android:id="@+id/tableForButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/textViewBuilding"
        android:layout_above="@id/textViewRoom"
        android:layout_marginTop="0dp"
        android:stretchColumns="*">


    </TableLayout>
</RelativeLayout>
